<%- include('partials/header.ejs') %>
<%- include('partials/main_nav.ejs') %>
<h2>Add A Survey</h2>

<% if (!loggedIn) { %>
    <div class="alert alert-danger" role="alert">
        <p>You must be <a href="/login" class="alert-link">logged in</a> to submit a ticket.</p>
    </div>
<% } else { %>
    <!-- card component -->
     <div class="card">
        <div class="card-header">
            TICKETS
        </div>
        <div class="card-body">
            <h5 class="card-title">Report Incident</h5>
            <form action="/ticket/add?loggedIn=true" method="POST">
                <div class="form-group">
                    <label for="ticket">Ticket Type</label>
                    <input type="text" name="ticket" id="ticket" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="incident">Incident</label>
                    <input type="text" name="incident" id="incident" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" class="form-control" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
     </div>
<% } %>

<%- include('partials/scripts.ejs') %>
<%- include('partials/footer.ejs') %>