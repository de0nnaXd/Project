<h2>Add A Survey</h2>
<form action="/ticket/add" method="POST">
    <div class="form-group">
        <label for="name">Ticket Type</label>
        <input type="ticket" name="ticket" id="ticket" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="incident">Incident</label>
        <input type="incident" name="incident" id="incident" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="description" required></textarea>
    </div>
        <button type="submit" class="btn btn-primary">Submit</button>
</form>